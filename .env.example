# ==============================
# 应用程序配置
# ==============================
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ==============================
# 数据库
# ==============================
DATABASE_URL=postgresql://user:password@localhost:5432/ai_saas_template


# ==============================
# AI API Keys (至少需要一个)
# ==============================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key_here
XAI_API_KEY=your_xai_api_key_here

# ==============================
# Redis (用于缓存和限流，可选)
# ==============================
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# ==============================
# Better Auth (认证系统)
# ==============================
BETTER_AUTH_SECRET=your-secret-key-change-in-production-min-32-chars
BETTER_AUTH_URL=http://localhost:3000

# ==============================
# Google OAuth (Google 一键登录)
# ==============================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here

# ==============================
# Email Service (可选)
# ==============================
# 邮件服务提供商: resend | smtp | development
EMAIL_PROVIDER=development
FROM_EMAIL=noreply@yourdomain.com

# Resend 配置 (推荐)
RESEND_API_KEY=your_resend_api_key_here


# ==============================
# Feature Flags
# ==============================
ENABLE_AI_FEATURES=true
ENABLE_ADMIN_FEATURES=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_DEFAULT_LOCALE=zh
NEXT_PUBLIC_SUPPORTED_LOCALES=zh,en

# ==============================
# cloudflare R2 (用于存储用户上传的文件，可选)
# ==============================
CLOUDFLARE_ACCOUNT_ID=cloudflare_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=cloudflare_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=cloudflare_r2_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=cloudflare_r2_bucket_name


# ==============================
# Analytics (可选)
# ==============================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your_verification_code
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn
